generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  id        String     @id @default(uuid())
  title     String
  questions Question[]
}

model Question {
  id        String   @id @default(uuid())
  quizId    String
  type      String
  text      String
  options   String[] // для checkbox
  answer    String
  quiz      Quiz     @relation(fields: [quizId], references: [id])
}
